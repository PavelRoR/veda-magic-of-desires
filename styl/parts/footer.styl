#footer
	width 100%
	border-top: 1px solid  rgb(255, 160, 25);
	background-color #292c38
	padding 30px 0
	text-align center
	color #fefefe
	h5
		font-size: 24px;
		font-family: "RobotoSlabBold", sans-serif;
		color: rgb(255, 255, 255);
		font-weight: bold;
		line-height: 1
		margin-bottom 18px
		span
			color #ffb43c
	p
	#conditions
		font-size: 14px;
		font-family: "RobotoRegular", sans-serif;
		color: rgb(254, 254, 254);
		line-height: 1.7
	#conditions
		text-decoration underline
		&:hover
		&:focus
			text-decoration none
.soc_buttons
	width 60%
	margin: 20px auto 0
	a
		display: inline-block
		margin: 0 18px 20px
		position relative
		z-index: 1
		.fa
			width: 30px;
			height: 30px;
			background-image linear-gradient(-13deg,#ffbf50, #ffa019)
			box-shadow 0 3px 7px 0 rgba(#ffbc4a, .26)
			color #292c38
			font-size 20px
			line-height 30px
			border-radius 50%