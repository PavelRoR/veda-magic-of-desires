#main_screen
    background-image: url(../img/main_bg.jpg)
    background-repeat: no-repeat
    background-position: center top
    background-size cover
    width 100%
    overflow: hidden
    padding:0 0 35px
#header
    padding: 25px 20px
    overflow hidden
#logo
    float: left
.contacts
    float: right
    text-align: right
    .fa
        color: #ffa019
        font-size: 18px
        margin: 0 15px 0  40px
        &.fa-phone
            margin-left: 0
    .fa+span
        font-size: 18px;
        font-family: "OpenSansBold", arial;
        color: #fcfafa
        line-height: 26px
        text-align: right;
        &:hover
            text-decoration underline
#first_screen_section
    padding: 0
    .container
        position: relative
        z-index: 9
        text-align: center
        .video_wrapper
            width: 41%
            margin: 40px 0 0
            float left
#pre
    font-size: 27px;
    font-family: "RobotoBold", sans-serif;
    color: rgb(255, 255, 255);
    text-transform: uppercase;
    line-height: 1
    text-shadow: 0px 0px 22px rgba(0, 0, 0, 0.92);
    margin 15px 0 25px
h2
    font-size: 30px;
    font-family: "RobotoMedium", sans-serif;
    color: rgb(250, 249, 246);
    line-height: 1.3;
    text-shadow: 0px 0px 22px rgba(0, 0, 0, 0.92);
    margin 10px auto 20px
    width 630px
#date
    display block
    margin 0 auto
#veda_main
    position absolute
    bottom: -130px;
    right: -63px;